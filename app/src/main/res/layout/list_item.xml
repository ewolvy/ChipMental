<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:gravity="center_vertical|start"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:padding="8dp"
    android:clickable="true"
    android:id="@+id/cont_item_root">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:textSize="18sp"
        android:gravity="center_vertical|start"
        android:id="@+id/txt_limitating"
        android:transitionName="@string/transition_limiting"
        tools:text="Lorem Ipsum"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/im_arrow"
        android:src="@drawable/ic_trending_flat_black_36dp"
        android:contentDescription="@string/app_name"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:textSize="18sp"
        android:gravity="center_vertical|end"
        android:id="@+id/txt_growing"
        android:transitionName="@string/transition_growing"
        tools:text="Ipsum Lorem"/>

</LinearLayout>